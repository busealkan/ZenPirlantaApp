<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/cardMargin"
    android:paddingTop="@dimen/cardMargin"
    android:paddingBottom="@dimen/cardMargin"
    android:paddingRight="@dimen/cardMargin">

    <androidx.cardview.widget.CardView
        android:id="@+id/kategoriCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardMaxElevation="@dimen/cardMargin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_design"
            >

            <TextView
                android:id="@+id/txtKategoriAd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/kategoriGridViewImageMargin"
                android:layout_marginBottom="@dimen/kategoriGridViewImageMargin"
                android:textSize="@dimen/yaziKucukBoyut"
                android:textColor="@color/logoRengi"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgKategori"
                tools:text="@string/toolsUrunIsim" />

            <ImageView
                android:id="@+id/imgKategori"
                android:layout_width="@dimen/kategoriGridViewImageWidth"
                android:layout_height="@dimen/kategoriGridViewImageHeight"
                android:layout_marginTop="@dimen/kategoriGridViewImageMargin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/pirlantakolye" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
